function widget:GetInfo()
  return {
    name      = "Air Reload Filter (Pad-Needed Icon Truth)",
    desc      = "Prunes pad-needed aircraft from selection; can also select all pad-needed aircraft.",
    author    = "you + gpt",
    date      = "2025-08-29",
    license   = "MIT",
    version   = "2.1.0",
    layer     = 0,
    enabled   = true,
  }
end

------------------------------------------------------------
-- Epic Menu (stable, minimal)
------------------------------------------------------------

options_path = "Settings/Misc/Air Reload Filter"

options = {
  runNow = {
    name = "Deselect Pad-Needed Aircraft (Run Now)",
    type = "button",
    desc = "Remove aircraft that show the pad-needed/no-payload icon from your CURRENT selection.",
    OnChange = function() DeselectPadNeeded(false, true) end,
  },

  selectAllPadNeeded = {
    name = "Select All Pad-Needed Aircraft",
    type = "button",
    desc = "Clear selection, then select ALL of your aircraft that currently need to reload/refuel (pad-needed icon).",
    OnChange = function() SelectAllPadNeeded() end,
  },

  autoFilter = {
    name = "Auto-filter On Selection Change",
    type = "bool",
    value = false,
    desc = "Whenever your selection changes, automatically prune pad-needed aircraft.",
    noHotkey = true,
  },

  neverEmpty = {
    name = "Never Empty Selection",
    type = "bool",
    value = true,
    desc = "When deselecting from *current* selection: if every selected air needs a pad, keep the selection unchanged.",
    noHotkey = true,
  },

  verbose = {
    name = "Console Messages",
    type = "bool",
    value = true,
    desc = "Show a short console message when actions run.",
    noHotkey = true,
  },

  infoHotkey = {
    name  = "How to Add a Hotkey",
    type  = "text",
    value = "Open Menu ▶ Hotkeys, search for deselect_air_reload, and bind any key you want.",
  },
}

------------------------------------------------------------
-- Locals
------------------------------------------------------------

local spGetSelectedUnits   = Spring.GetSelectedUnits
local spGetTeamUnits       = Spring.GetTeamUnits
local spGetMyTeamID        = Spring.GetMyTeamID
local spGetUnitDefID       = Spring.GetUnitDefID
local spGetUnitRulesParam  = Spring.GetUnitRulesParam
local spSelectUnitArray    = Spring.SelectUnitArray
local Echo                 = Spring.Echo

local function IsAir(udid)
  local ud = udid and UnitDefs[udid]
  return ud and ud.canFly
end

-- Ground truth for the portrait “pad-needed / no payload” badge
local PAD_RULE_KEYS = { "rearm", "wantPad", "padWait", "padWanted", "needsRefuel", "needsReload", "noammo" }

local function PlaneNeedsPad(unitID)
  for i = 1, #PAD_RULE_KEYS do
    local v = spGetUnitRulesParam(unitID, PAD_RULE_KEYS[i])
    if v and v ~= 0 then
      return true
    end
  end
  return false
end

local function isVerbose()
  return options and options.verbose and options.verbose.value
end

------------------------------------------------------------
-- Core ops
------------------------------------------------------------

function DeselectPadNeeded(quiet, forceVerbose)
  local sel = spGetSelectedUnits()
  if not sel or #sel == 0 then return end

  local keep, removed = {}, 0
  for i = 1, #sel do
    local u = sel[i]
    local udid = spGetUnitDefID(u)
    if udid and IsAir(udid) and PlaneNeedsPad(u) then
      removed = removed + 1
    else
      keep[#keep + 1] = u
    end
  end

  if removed > 0 then
    if options.neverEmpty and options.neverEmpty.value and (#keep == 0) then
      if (not quiet and isVerbose()) or forceVerbose then
        Echo("game_message: All selected air need a pad; leaving selection unchanged.")
      end
      return
    end
    spSelectUnitArray(keep, false) -- replace selection
    if (not quiet and isVerbose()) or forceVerbose then
      Echo(("game_message: Removed %d pad-needed aircraft from selection."):format(removed))
    end
  else
    if (not quiet and isVerbose()) or forceVerbose then
      Echo("game_message: No pad-needed aircraft in current selection.")
    end
  end
end

-- New: clear selection, then select ALL of your pad-needed aircraft
function SelectAllPadNeeded()
  local teamID = spGetMyTeamID()
  if not teamID then return end

  local units = spGetTeamUnits(teamID)
  local pick = {}

  for i = 1, (units and #units or 0) do
    local u = units[i]
    local udid = spGetUnitDefID(u)
    if udid and IsAir(udid) and PlaneNeedsPad(u) then
      pick[#pick + 1] = u
    end
  end

  spSelectUnitArray(pick, false) -- replace selection (clears first, then selects)
  if isVerbose() then
    if #pick > 0 then
      Echo(("game_message: Selected %d pad-needed aircraft."):format(#pick))
    else
      Echo("game_message: No pad-needed aircraft to select.")
    end
  end
end

------------------------------------------------------------
-- Lifecycle & Hotkey Action (bind from Hotkeys UI)
------------------------------------------------------------

function widget:Initialize()
  -- Action appears in Hotkeys UI (search: deselect_air_reload)
  widgetHandler:AddAction("deselect_air_reload", function()
    DeselectPadNeeded(false, false)
  end, nil, "t")

  if isVerbose() then
    Echo("game_message: Bind in Menu ▶ Hotkeys (search 'deselect_air_reload').")
  end
end

function widget:Shutdown()
  widgetHandler:RemoveAction("deselect_air_reload")
end

function widget:SelectionChanged()
  if options and options.autoFilter and options.autoFilter.value then
    DeselectPadNeeded(true, false) -- quiet to avoid spam
  end
end
